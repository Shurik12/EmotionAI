# /etc/systemd/system/emotion_detection.service
[Unit]
Description=Emotion Detection AI Service
After=network.target

[Service]
User=www-data
Group=www-data
WorkingDirectory=/home/alex/EmotionAI
Environment="PATH=/home/alex/EmotionAI/venv/bin"
ExecStart=/home/alex/EmotionAI/venv/bin/gunicorn --config /home/alex/EmotionAI/gunicorn_config.py --bind unix:/var/run/emotionai/gunicorn.sock wsgi:app
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
