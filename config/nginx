# /etc/nginx/sites-available/emotion-ai
upstream emotion_ai_backend {
    server 127.0.0.1:8080;
    keepalive 32;
}

server {
    listen 80;
    server_name alpha.razuma.pro www.alpha.razuma.pro;
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    server_name alpha.razuma.pro www.alpha.razuma.pro;
    client_max_body_size 100M;

    # SSL configuration
    ssl_certificate /etc/letsencrypt/live/alpha.razuma.pro/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/alpha.razuma.pro/privkey.pem;

    root /home/alex/emotion-ai/frontend/build;

    # API proxy to C++ backend
    location /api/ {
        client_max_body_size 100M;

        proxy_pass http://emotion_ai_backend;
        proxy_http_version 1.1;

        # Crucial headers for proper proxying
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
        
        # Important for CORS and proper response handling
        proxy_set_header Connection '';
        
        # Timeout settings
        proxy_read_timeout 300s;
        proxy_connect_timeout 300s;
        proxy_send_timeout 300s;
        
        # Buffer settings
        proxy_buffering off;
        proxy_request_buffering off;
    }

    # Serve static files from React build
    location /static/ {
        alias /home/alex/emotion-ai/frontend/build/static/;
        expires 1y;
        add_header Cache-Control "public, immutable";
        access_log off;

        # Security headers for static files
        add_header X-Content-Type-Options "nosniff" always;
        add_header X-Frame-Options "SAMEORIGIN" always;
    }

    # Frontend static files
    location / {
        try_files $uri $uri/ /index.html;
        add_header Cache-Control "no-cache, no-store, must-revalidate";
    }

    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
}
