# /etc/nginx/sites-available/emotion_detection
server {
    listen 80;
    server_name alpha.razuma.pro www.alpha.razuma.pro;
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    server_name alpha.razuma.pro www.alpha.razuma.pro;

    # SSL configuration
    ssl_certificate /etc/letsencrypt/live/alpha.razuma.pro/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/alpha.razuma.pro/privkey.pem;
    
    # Security headers
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;

    # Client settings
    client_max_body_size 50M;
    client_body_buffer_size 128k;

    # Root for React app
    root /home/alex/EmotionAI/frontend/build;
    index index.html;

    # BLOCK COMMON VULNERABILITY SCANS AND MALICIOUS PATHS FIRST
    location ~* ^/(admin|wp-admin|wp-login|administrator|phpmyadmin|mysql|server-status|\.env|config|\.git|\.ht) {
        return 444;
    }

    location ~* (\.php$|\.asp$|\.aspx$|\.jsp$|\.pl$|\.cgi$|wp-|xmlrpc|vendor/phpunit) {
        return 444;
    }

    # API routes - proxy to Gunicorn via UNIX socket (MUST COME FIRST)
    location /api/ {
        # Ensure this location block takes precedence for all API requests
        proxy_pass http://unix:/var/run/emotionai/gunicorn.sock;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_buffering off;
        
        # Timeout settings
        proxy_connect_timeout 300s;
        proxy_send_timeout 300s;
        proxy_read_timeout 300s;
        send_timeout 300s;
    }

    # Serve static files from React build
    location /static/ {
        alias /home/alex/EmotionAI/frontend/build/static/;
        expires 1y;
        add_header Cache-Control "public, immutable";
        access_log off;
        
        # Security headers for static files
        add_header X-Content-Type-Options "nosniff" always;
        add_header X-Frame-Options "SAMEORIGIN" always;
    }

    # Main location - serve React app for all other routes (MUST BE LAST)
    location / {
        # First try to serve existing files, then fall back to index.html
        try_files $uri $uri/ /index.html;
        
        # Additional security for non-static routes
        add_header Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob:; font-src 'self'; connect-src 'self' https://alpha.razuma.pro ws: wss:;" always;
    }

    # Custom error page for 404 errors
    error_page 404 /index.html;
    error_page 500 502 503 504 /index.html;
}
